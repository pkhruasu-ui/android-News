<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    style="@style/newsLinearLayout">

    <ImageView
        android:id="@+id/thumbnail"
        style="@style/newsImage"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/title"
        style="@style/newsTitle"
        tools:text="@string/tmp_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/source"
            style="@style/newsSource"
            tools:text="@string/tmp_byline" />

        <TextView
            style="@style/stopgap"
            tools:text="\u2022" />

        <TextView
            android:id="@+id/publishDate"
            style="@style/newsPublishDate"
            tools:text="@string/tmp_publishDate" />
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        style="@style/newsDescription"
        tools:text="@string/tmp_author" />

</LinearLayout>